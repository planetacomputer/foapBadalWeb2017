{% extends '/default/menu.html.twig' %}

{% block title %}{{producte.descripcio}} - {{ parent() }}{% endblock %}
{% block body %}
<!-- Menu Container -->
<div class="w3-container" id="menu">
  <div class="w3-content" style="max-width:700px">
 
    <h5 class="w3-center w3-padding-48"><span class="w3-tag w3-wide">THE MENU</span></h5>
  <a href="{{ path('menu') }}">Back to Menu</a>
    <div class="w3-row w3-center w3-card-2 w3-padding">
      {% block producte %}
      <img src="{{ asset('w3images/productes/'~producte.photo) }}" style="width:100%">
        <div class="w3-container w3-center">
          <p>{{producte.descripcio}}</p>
          <p>{{producte.preu}}</p>
        </div>
    </div>
    {% endblock %}
    <img src="{{ asset('w3images/coffeehouse2.jpg')}}" style="width:100%;max-width:1000px;margin-top:32px;">
  </div>
</div>
{% endblock %}